<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.bin.hibernate.one2one.primary.Manager" table="MANAGERS">
        <id name="mgrId" type="java.lang.Integer">
            <column name="MGR_ID" />
            <generator class="native" />
        </id>
        <property name="mgrName" type="java.lang.String">
            <column name="MGR_NAME" />
        </property>
        
        <!-- 映射1-1的关系:在对应的数据表中已经有外键了,当前持久化类使用one-to-one进行映射 -->
        <!-- 没有外键的一端需要使用one-to-one元素,该元素使用property-ref属性指定被关联实体主键以外的字段作为关联字段.-->
        <one-to-one name="department" 
        class="com.bin.hibernate.one2one.primary.Department"></one-to-one>
    </class>
</hibernate-mapping>
